@using Dit.Umb9.Mutobo.ToolBox.Models.Pages
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Dit.Umb9.Mutobo.ToolBox.Models.Pages.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "WCBasePage.cshtml";
}
<o-body>
    <h1>@Model.PageTitle</h1>
    @if (Model.Modules != null && Model.Modules.Any())
    {
        foreach (var module in Model.Modules)
        {
            if (module.SpaceBeforeModule)
            {
                <div class="spacer"></div>
            }
            @await module.RenderModule(this.Html)
            if (module.SpacerAfterModule)
            {
                <div class="spacer"></div>
            }
        }
    }
</o-body>